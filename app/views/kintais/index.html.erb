<% provide(:title, '勤怠管理') %>

<div id="kintais">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="title col-md-3"><p>勤怠管理</p></div>
    <div id="month" class="col-md-3">
      <ul class="pagination">
        <li class="disabled">
          <a href="kintai?month=<%= @target_month.month-1 %>" aria-label="Previous">
            <div aria-hidden="true" class="aquo">&laquo;<%= @target_month.month-1 %>月</div>
          </a>
        </li>
        <li class="disabled">
          <a href="#" id="target-month">
            <%= @target_month.month %>月
          </a>
        </li>
        <li class="disabled">
          <a href="kintai?month=<%= @target_month.month+1 %>" aria-label="Previous">
            <div aria-hidden="true" class="aquo"><%= @target_month.month+1 %>月&raquo;</div>
          </a>
        </li>
      </ul>
    </div><!-- #month -->
    <div class="col-md-3"></div>
  </div><!-- row -->
<% if false %>
  <div class="row">
    <% @kintais.each do |k| %>
      <%= k.date.day %>
      <%= k.start.hour + k.start.min/60.0 %>
      <%= k.end.hour + k.end.min/60.0 %>
      <%= (k.end.hour + k.end.min/60.0) - (k.start.hour + k.start.min/60.0) %>
      <%= work_time(k.start,k.end) %>
    <br>
    <% end %>
  </div><!-- row -->
  <div class="row">
    <% @sum_by_day.each_with_index do |s,i| %>
      <%= i %>
      <%= @sum_by_day[i][:start] %>
      <%= @sum_by_day[i][:end] %>
      <%= @sum_by_day[i][:time] %>
    <br>
    <% end %>
  </div><!-- row -->
<% end %>
  <div class="row">
    <div class="create">
      <div id="slider">
        <%= form_tag controller: "kintais", action: "index", method: :post, remote: true do %>
          <div id="door_k">
            <%= render partial: 'kintai' %>
          </div><!-- #door -->
        <% end %>
      </div><!-- #slider -->
    </div><!-- create -->
  </div><!-- row -->
</div>

