<% provide(:title, '実績投入') %>

<div id="jissekis">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3">実績投入</div>
    <div id="month" class="col-md-3">
      <ul class="pagination">
        <li class="disabled"><a href="#" aria-label="Previous"><div aria-hidden="true" class="aquo">&laquo;</div></a></li>
        <li class="disabled"><a href="#" id="target-month"><%= @target_month.month %>月</a></li>
        <li class="disabled"><a href="#" aria-label="Previous"><div aria-hidden="true" class="aquo">&raquo;</div></a></li>
      </ul>
    </div><!-- #month -->
    <div class="col-md-3"><% @sum_by_day.each do |sum| %>合計<%= sum[0] %>h<br><% end %></div> <!-- tmp -->
  </div><!-- row -->
  <div class="row">
  <div class="create">
    <% if @sum_by_day.size > 0 %>
      <div id="slider">
        <%= form_tag controller: "jissekis", action: "index", method: :post, remote: true do %>
          <div id="door">
            <%= render partial: 'jisseki' %>
          </div><!-- #door -->
        <% end %>
      </div><!-- #slider -->
    <% else %>
      プロジェクトが割り当てられていません。
    <% end %>
  </div><!-- create -->
  </div><!-- row -->

</div>
